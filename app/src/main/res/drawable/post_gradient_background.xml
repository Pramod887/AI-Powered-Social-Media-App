<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Gradient background -->
    <gradient
        android:type="linear"
        android:startColor="#FF6A00"
        android:endColor="#FFB347"
        android:angle="45" />

    <!-- Optional inner padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
