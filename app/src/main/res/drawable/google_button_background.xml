<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@android:color/white"/>

    <!-- Rounded corners -->
    <corners android:radius="30dp"/>

    <!-- Border stroke -->
    <stroke
        android:width="1dp"
        android:color="#DADCE0"/> <!-- light grey border like Google button -->

    <!-- Padding inside the button -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp"/>
</shape>
