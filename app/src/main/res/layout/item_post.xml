<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp"
    android:fitsSystemWindows="true"
    app:cardBackgroundColor="@android:color/transparent">

    <!-- Main container with dark gradient background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_background">

        <!-- Post Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <!-- Profile Picture with Dark Glass Effect Border -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:cardCornerRadius="26dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <!-- Dark glass effect border -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_semi_transparent"
                    android:padding="3dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="23dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:id="@+id/ivUserProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_person"
                            android:background="@color/white_semi_transparent"
                            android:scaleType="centerCrop"
                            android:padding="2dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvPostTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2h ago"
                        android:textSize="14sp"
                        android:textColor="@color/white_transparent" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/dot_indicator"
                        android:backgroundTint="@color/white_transparent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Public"
                        android:textSize="12sp"
                        android:textColor="@color/white_transparent" />

                </LinearLayout>

            </LinearLayout>

            <!-- Options Button with Dark Glass Effect -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/white_transparent"
                app:cardBackgroundColor="@color/black_semi_transparent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPostOptions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    app:icon="@drawable/ic_more_vert"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconTint="@color/white"
                    app:iconSize="20dp"
                    style="@style/Widget.Material3.Button.IconButton"
                    app:backgroundTint="@android:color/transparent"
                    app:rippleColor="@color/white_transparent"
                    android:contentDescription="Post options" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Post Image with Enhanced Dark Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/white_transparent"
            app:cardBackgroundColor="@color/dark_background">

            <ImageView
                android:id="@+id/ivPostImage"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@drawable/enhanced_gradient_placeholder" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Post Actions with Dark Glass Effect -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Like Button -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/white_transparent"
                    app:cardBackgroundColor="@color/black_semi_transparent"
                    android:layout_marginEnd="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLike"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        app:icon="@drawable/ic_heart_outline"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@color/white"
                        app:iconSize="24dp"
                        style="@style/Widget.Material3.Button.IconButton"
                        app:backgroundTint="@android:color/transparent"
                        app:rippleColor="@color/white_transparent"
                        android:contentDescription="Like post" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Comment Button -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/white_transparent"
                    app:cardBackgroundColor="@color/black_semi_transparent"
                    android:layout_marginEnd="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnComment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        app:icon="@drawable/ic_comment"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@color/white"
                        app:iconSize="24dp"
                        style="@style/Widget.Material3.Button.IconButton"
                        app:backgroundTint="@android:color/transparent"
                        app:rippleColor="@color/white_transparent"
                        android:contentDescription="Comment on post" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Share Button -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/white_transparent"
                    app:cardBackgroundColor="@color/black_semi_transparent">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnShare"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        app:icon="@drawable/ic_share"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@color/white"
                        app:iconSize="24dp"
                        style="@style/Widget.Material3.Button.IconButton"
                        app:backgroundTint="@android:color/transparent"
                        app:rippleColor="@color/white_transparent"
                        android:contentDescription="Share post" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Bookmark Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/white_transparent"
                app:cardBackgroundColor="@color/black_semi_transparent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBookmark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    app:icon="@drawable/ic_bookmark_outline"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconTint="@color/white"
                    app:iconSize="24dp"
                    style="@style/Widget.Material3.Button.IconButton"
                    app:backgroundTint="@android:color/transparent"
                    app:rippleColor="@color/white_transparent"
                    android:contentDescription="Bookmark post" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Engagement Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,234 likes"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:drawableStart="@drawable/ic_heart_filled"
                android:drawablePadding="6dp"
                android:drawableTint="@color/white" />

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/dot_indicator"
                android:backgroundTint="@color/white_transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56 shares"
                android:textSize="14sp"
                android:textColor="@color/white_transparent" />

        </LinearLayout>

        <!-- Caption with Enhanced Styling -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUsernameCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvCaption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Amazing sunset at the beach! ðŸŒ… Perfect evening with friends. #sunset #beach #memories"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:lineSpacingMultiplier="1.3" />

        </LinearLayout>

        <!-- Comment Section -->
        <TextView
            android:id="@+id/tvCommentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:text="View all 47 comments"
            android:textColor="@color/white_transparent"
            android:textSize="14sp"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:drawableStart="@drawable/ic_comment_outline"
            android:drawablePadding="6dp"
            android:drawableTint="@color/white_transparent" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>